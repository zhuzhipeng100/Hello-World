hour=raw_input("Input your hours")
try:
  h=float(hour)
except:
  print"please enter a valid number"
  continue
  
rate=raw_input("Input your rate")
try:
  r=float(rate)
except:
  print"please enter a valid number"
  continue
  
def computerate(h,r)
      if h>=40:
        pay=r*40+r*1.5*(h-40)
      elif h<40:
        pay=r*h
      return pay
      
p=computerate(h,r)
print "pay",p
